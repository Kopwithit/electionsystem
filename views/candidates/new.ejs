<%- include('../partials/header'); %>
<div class='container'>
  <div class='row'>
    <div style="width: 30%; margin: 25px auto;">
      <form action='/elections/<%= election._id %>/candidates' method='POST'>
        <div class="form-group">
            <label for='position'>Position</label>
             <select type='name' class="form-control" id='position' name='position'>
                <% election.positions.forEach((position) => { %>
                    <option><%= position %></option>
                <% }); %>
            </select>
        </div>
        <div class='form-group'>
          <label for='exampleInputEmail1'>Name</label>
          <input type='name' class='form-control' name='name' placeholder='Name'>
        </div>  
        <button type='submit' class='btn btn-large btn-primary btn-block'>Submit</button>
      </form>  
      <a href='/elections/<%= election._id %>'>Go Back</a>
    </div>
  </div>
</div>
<%- include('../partials/footer'); %>