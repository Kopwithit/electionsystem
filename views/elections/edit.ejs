<%- include('../partials/header'); %>
<div class='container'>
  <div class='row'>
    <h1 style="text-align: center">Editing <%= election.name %></h1>
    <div style="width: 30%; margin: 25px auto;">
      <form action='/elections/<%= election._id %>?_method=PUT' method='POST'>
        <div class='form-group'>
          <label for='exampleInputEmail1'>Name</label>
          <input type='name' class='form-control' id='name' name='name' placeholder='Enter election name' value='<%= election.name %>'>
        </div>
        <div class='form-group'>
          <label for='exampleInputEmail1'>Code</label>
          <input type='name' class='form-control' id='code' name='code' placeholder='Code' value='<%= election.code %>'>
        </div>  
        <button type='submit' class='btn btn-large btn-primary btn-block'>Submit</button>
      </form>  
      <a href='/elections'>Go Back</a>
    </div>
  </div>
</div>


<%- include('../partials/footer'); %>